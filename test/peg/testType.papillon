{-# LANGUAGE QuasiQuotes, TypeFamilies #-}

import Text.Papillon
import Data.Char

main :: IO ()
main = do
	case testType $ parse "3351559" of
		Right (r, _) -> print r
		Left _ -> putStrLn $ "error"
	case testType $ parse "8351559" of
		Right (r, _) -> print r
		Left _ -> putStrLn $ "error"

single :: a -> [a]
single = (: [])

just :: a -> Maybe a
just = Just
nothing :: Maybe a
nothing = Nothing

isThree :: Int -> Bool
isThree = (== 3)

[papillon|

testType :: Maybe Int
	= 3:digit		{ Nothing }
	/ d:digit		{ Just d }
;
digit :: Int
	= d:[isDigit d]		{ read (single d) }
;

|]
