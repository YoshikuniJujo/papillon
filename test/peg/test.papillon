{-# LANGUAGE FlexibleContexts, QuasiQuotes, TypeFamilies, UndecidableInstances #-}

import Text.Papillon

import Data.Char

data SomeData = SomeData Int String deriving Show

main :: IO ()
main = do
	case dv_onlyDigits $ parse initialPos "123 abc" of
		Right (str, _) -> print $ str 4
		Left err -> putStrLn $ "error: " ++ show err
	case dv_onlyDigits $ parse initialPos "123 \n\t" of
		Right (str, _) -> print $ str 4
		Left err -> putStrLn $ "error: " ++ show err
	case dv_onlyDigits $ parse initialPos "123abc" of
		Right (str, _) -> print $ str 4
		Left err -> putStrLn $ "OK! fail: " ++ show err
	case dv_mulDigits $ parse initialPos "559" of
		Right ((m, n), _) -> print (m 3, n ["hello", "friend"])
		Left err -> putStrLn $ "error: " ++ show err
	case dv_addDigits2 $ parse initialPos "33 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_divDigits $ parse initialPos "63 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_someData $ parse initialPos "63 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_getSomeData $ parse initialPos "63 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_testSelLeaf $ parse initialPos "63 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_testSelLeaf $ parse initialPos "abcde 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_digits_ $ parse initialPos "12345abc 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_testAnd $ parse initialPos "12345abc 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err
	case dv_testAnd $ parse initialPos "12345bc 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "OK! fail: " ++ show err
	case dv_testNot $ parse initialPos "12345abc 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "OK! fail: " ++ show err
	case dv_testNot $ parse initialPos "12345bc 25" of
		Right (r, _) -> print r
		Left err -> putStrLn $ "error: " ++ show err

[papillon|

testSelLeaf :: Int
	= i:(d:something { read d } / o:other { length o }) { i }
;
onlyDigits :: Int -> ([String], Int, Maybe String, Maybe Char)
	= (Just s, - 8):digits []:other ' ' mo:(o:other { o })?
		mc:(c:[not $ isLower c] { c })?
		{ \x -> (replicate x $ 'c' : s ++ show (-5 :: Int), - 9, mo, mc) }
;
mulDigits :: (Int -> Int, [String] -> [String])
	= ds:something			{ ((* (read ds)), (ds :)) }
;
addDigits :: Int
	= x:something ' ' y:something	{ (+) (read x) (read y) }
;
addDigits2 :: Int
	= ((:) _ x):something ' ' y:something	{ (read x + read y) }
;
divDigits :: Int
	= x:something ' ' y:something	{ read x `div` read y }
;
getSomeData :: (Int, String)
	= (x `SomeData` y):someData	{ (x, y) }
;
someData :: SomeData
	= x:something ' ' y:something	{ read x `SomeData` y}
;
digits :: (Maybe String, Int)
	= s:something			{ (Just s, - 8) }
	/ _:other			{ (Nothing, -11) }
;
something :: String
	= c:[isDigit c] s:something	{ c : s }
	/ c:[isDigit c]			{ c : [] }
;
other :: String
	= c:[isLower c] s:other		{ c : s }
	/				{ [] }
;
digits_ :: Int
	= d:(c:[isDigit c] { c })+	{ read d }
;
testAnd :: Int
	= d:digits_ &'a'		{ d }
;
testNot :: Int
	= d:digits_ !'a'		{ d }
;

|]
