{-# LANGUAGE QuasiQuotes, TypeFamilies, UndecidableInstances #-}

import Text.Papillon
import Data.Char

main :: IO ()
main = case dv_testLL $ parse initialPos "3, 8, 5" of
	Right (r, _) -> print r
	Left err -> putStrLn $ "error: " ++ show err

[papillon|

testLL :: [Int]
	= l:digit ',' ' ' m:digit ',' ' ' n:digit	{ [l, m, n] }
;
digit :: Int
	= d:[isDigit d]		{ read [d] }
;

|]
