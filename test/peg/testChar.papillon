{-# LANGUAGE QuasiQuotes, FlexibleContexts #-}

import Text.Papillon

import Data.Char

type Nil = ()
nil :: Nil
nil = ()
cons :: a -> [a] -> [a]
cons = (:)
emp :: [a]
emp = []

true :: Bool
true = True

main :: IO ()
main = case dv_three $ parse initialPos "333" of
	Right ((), _) -> putStrLn "OK!"
	Left err -> putStrLn $ "not matched: " ++ show err

[papillon|

oneTwoThree :: Nil
	= "123":string	{ nil }
;
string :: String
	= c s:string	{ cons c s }
	/		{ emp }
;
three :: Nil
	= '3' '3' '3'	{ nil }
;
other :: Nil
	= '3':something	{ nil }
;
something :: Char
	= c:[isDigit c]	{ c }
