{-# LANGUAGE QuasiQuotes, TypeFamilies #-}

import Text.Papillon
import Data.Char

main :: IO ()
main = case add $ parse "3 + 5" of
	Right (r, _) -> print r
	Left (ParseError c m p _ _ _) -> putStrLn $ "error: " ++ show (c, m, p)

emp :: [a]
emp = []

[papillon|

add :: Int
	= l:digit ' ' '+' ' ' r:digit	{ l + r }
;
digit :: Int
	= d:[isDigit d]			{ read $ d : emp }
;

|]
